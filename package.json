{
  "devDependencies": {
    "concurrently": "^9.1.2",
    "git-cliff": "^2.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "scripts": {
    "dev": "concurrently --raw 'bun run dev:ui' 'bun run dev:rust'",
    "dev:ui": "bun --cwd ui dev",
    "dev:rust": "bun scripts/dev.ts cargo run -- --port=4000 --dev-url=http://localhost:3000",
    "build": "bun --cwd ui build && bun scripts/dev.ts cargo build --release",
    "cargo": "bun scripts/dev.ts cargo",
    "prepare": "husky",
    "format": "prettier --write ui/ --ignore-path ui/.gitignore"
  },
  "workspaces": [
    "ui/"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,css}": "prettier --write",
    "*.rs": "cargo fmt -- --check"
  }
}

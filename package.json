{
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.5",
    "git-cliff": "^2.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "scripts": {
    "setup": "bun scripts/dev.ts",
    "dev": "bun run setup tauri dev",
    "build": "bun run setup tauri build",
    "cargo": "bun run setup cargo",
    "prepare": "husky"
  },
  "workspaces": [
    "ui/"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,css}": "prettier --write",
    "*.rs": [
      "cargo fmt",
      "cargo clippy --fix --allow-dirty --allow-staged"
    ]
  }
}

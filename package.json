{
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "git-cliff": "^2.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "scripts": {
    "dev": "bun run scripts/dev.ts tauri dev",
    "build": "bun run scripts/dev.ts tauri build",
    "cargo": "bun run scripts/dev.ts cargo",
    "prepare": "husky",
    "format": "prettier --write ui/ --ignore-path ui/.gitignore"
  },
  "workspaces": [
    "ui/"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,css}": "prettier --write",
    "*.rs": "cargo fmt -- --check"
  }
}

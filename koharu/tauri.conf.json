{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "Koharu",
  "build": {
    "beforeDevCommand": "bun --cwd ui dev",
    "beforeBuildCommand": "bun --cwd ui build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../ui/out"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "visible": false,
        "width": 1024,
        "height": 768,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "title": "Koharu",
        "decorations": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "decorations": false,
        "resizable": false,
        "height": 200,
        "width": 300,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "signCommand": "trusted-signing-cli -e https://eus.codesigning.azure.net -a Mayo -c Hawaii -d Koharu %1"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUzRjhCMEYzNDg1NzM0M0QKUldROU5GZEk4N0Q0NDdRTDZTY2N0Zkc4RjRRK2Jza1lFOGFRNVc2SnY2ZWhFM3ZjdE9NMlo3QWwK",
      "endpoints": [
        "https://github.com/mayocream/koharu/releases/latest/download/latest.json"
      ]
    }
  }
}
